####################### bspwm #######################
[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

label-state = %icon%
label-state-padding = 10
label-focused = %icon% %name%
label-focused-padding = 2
label-unfocused = %icon%
label-unfocused-padding = 2
label-dimmed = %icon%
label-dimmed-padding = 2

label-occupied = %icon%
label-occupied-padding = 2
label-urgent = %icon%!
label-urgent-padding = 2
label-empty = %icon%
label-empty-padding = 2

ws-icon-0 = "Web;"
ws-icon-1 = "Code;"
ws-icon-2 = "Term;"
ws-icon-3 = "Dev;"
ws-icon-4 = "Random;"
ws-icon-5 = "1;"
ws-icon-6 = "2;"
ws-icon-7 = "3;"
ws-icon-8 = "4;"
ws-icon-9 = "5;"
ws-icon-10 = "6;"
ws-icon-11 = "7;"
ws-icon-12 = "Mail;"


## backup

index-sort = true
wrapping-scroll = false

pin-workspaces = true

label-mode = %mode%
label-mode-padding = 2

label-focused-background = ${colors.dark.blue}
label-focused-foreground = ${colors.white}
label-focused-underline= ${colors.blue}
label-unfocused-foreground = ${colors.grey1}
label-visible-foreground = ${colors.orange}
label-urgent-foreground = ${colors.yellow}

####################### DATE #######################
[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 10

; See "man date" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = %a %b %d, 

; Optional time format
time = %H:%M

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
# date-alt = %A, %d %B %Y
# time-alt = %H:%M:%S

label = %date% %time%
format =  <label>   
# format-background = #88000000
format-foreground = ${colors.yellow}
format-padding = 2


####################### VOLUME #######################
[module/volume]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =  muted
label-muted-foreground = #aaa
format-volume-padding = 2
format-muted-padding = 2

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 

####################### UPDATES #######################
[module/updates]
type = custom/script
exec = ~/.config/polybar/updates.sh
interval = 600
format-prefix = " "
click-right = pamac-updater
click-left = pamac-updater
format-padding = 2


####################### WLAN #######################
[module/wlan]
type = internal/network

interface = wlp3s0
interval = 30

label-connected = " %essid%  " 
label-disconnected = " Not Connected  "
# click-right = networkmanager_dmenu &

####################### MUSIC #######################

[module/spotify]
type = custom/script
interval = 5
format-prefix = "   "
format = "<label>"
exec = $HOME/.config/polybar/spotify.py
format-foreground = ${colors.green}
# label =  %output:0:30:%
click-left = playerctl play-pause

[module/playpause]
type = custom/script
exec = $HOME/.config/polybar/spot.sh
format-padding = 1
interval = 2
format = <label>
click-left = playerctl play-pause
format-foreground = ${colors.green}

####################### SETTINGS #######################

[module/kdeconnect]
type = custom/script
exec = "~/.config/polybar/extensions/polybar-kdeconnect/polybar-kdeconnect.sh -d"
tail = true

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;format-margin = 0
