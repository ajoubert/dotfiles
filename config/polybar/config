####################### MAIN BAR #######################
[bar/primary]
monitor = ${env:MONITOR:HDMI-0}

width = 100%
height = 27
offset-x = 0
offset-y = 0

background = ${colors.black}
foreground = ${colors.grey1}

underline-size = 2
underline-color = ${colors.grey1}

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0 
module-margin-right = 0

font-0 = NotoSans Nerd Font:pixelsize=11;2
font-1 = FontAwesome:size=10;2
font-2 = siji:pixelsize=10;2

modules-left = bspwm 
modules-center = playpause spotify
modules-right = volume updates date 

tray-position = right

