;======== START - config.general.part.1 ====
[bar/primary]
monitor = ${env:MONITOR:HDMI-0}

width = 100%
height = 27
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 0
module-margin-left = 0 
module-margin-right = 0

wm-restack = bspwm

font-0 = ${fonts.primary} 
font-1 = ${fonts.secondary} 
font-2 = ${fonts.primary} 

separator = " "

modules-left = bspwm 
modules-center = playpause spotify
modules-right = volume date 

tray-position = right

################ SECONDARY BAR ######################
[bar/secondary]
monitor = ${env:MONITOR_SECONDARY:DVI-D-0}

width = 100%
height = 27
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

wm-restack = bspwm

font-0 = ${fonts.primary} 
font-1 = ${fonts.secondary} 
font-2 = ${fonts.primary} 

separator = " "

modules-left = bspwm 
modules-center = playpause spotify
modules-right = volume date 

####################### bspwm #######################
[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

label-state = %icon%
label-state-padding = 1
label-focused = %icon% %name%
label-focused-padding = 1
label-unfocused = %icon%
label-unfocused-padding = 1
label-dimmed = %icon%
label-dimmed-padding = 1

label-occupied = %icon%
label-occupied-padding = 1
label-urgent = %icon%!
label-urgent-padding = 1
label-empty = %icon%
label-empty-padding = 1

## Indicates empty desktops to be closed (shouldn't happen often, unless intentional)
label-empty-underline = ${colors.secondary}

ws-icon-default = "Óèï"
