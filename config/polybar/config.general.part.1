;======== START - config.general.part.1 ====
[bar/primary]
monitor = ${env:MONITOR:HDMI-0}

width = 100%
height = 27
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0 
module-margin-right = 0

wm-restack = bspwm

font-0 = NotoSans Nerd Font:pixelsize=11;2
font-1 = FontAwesome:size=10;2
font-2 = siji:pixelsize=10;2

modules-left = bspwm 
modules-center = playpause spotify
modules-right = volume date 

tray-position = right

################ SECONDARY BAR ######################
[bar/secondary]
monitor = ${env:MONITOR_SECONDARY:DVI-D-0}

width = 100%
height = 27
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

spacing = 1
padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = ${fonts.primary} 
font-1 = ${fonts.secondary} 
font-2 = ${fonts.primary} 

wm-restack = bspwm

override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

modules-left = bspwm 
modules-center = playpause spotify
modules-right = volume date 

####################### bspwm #######################
[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

label-state = %icon%
label-state-padding = 10
label-focused = %icon% %name%
label-focused-padding = 2
label-unfocused = %icon%
label-unfocused-padding = 2
label-dimmed = %icon%
label-dimmed-padding = 2

label-occupied = %icon%
label-occupied-padding = 2
label-urgent = %icon%!
label-urgent-padding = 2
label-empty = %icon%
label-empty-padding = 2

## Indicates empty desktops to be closed (shouldn't happen often, unless intentional)
label-empty-underline = ${colors.secondary}

ws-icon-default = "Óèï"
