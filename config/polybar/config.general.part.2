;======== START - config.general.part.2 ====

## backup

index-sort = true
wrapping-scroll = false

pin-workspaces = true

label-mode = %mode%
label-mode-padding = 2

label-focused-background = ${colors.background}
label-focused-foreground = ${colors.primary}
label-focused-underline= ${colors.primary}
label-unfocused-foreground = ${colors.foreground-alt}
label-visible-foreground = ${colors.primary}
label-urgent-foreground = ${colors.alert}

####################### DATE #######################
[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 10

; See "man date" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; date = %a %b %d, 
date = %d/%m 

; Optional time format
time = %H:%M

label = %date% %time%
format =  <label>   
# format-background = #88000000
format-foreground = ${colors.primary}
format-padding = 1
font-size = 22

[module/time]
type = internal/date

interval = 10

time = %H:%M

label = %time%
format = <label>

format-foreground = ${colors.primary}
format-padding = 1


####################### VOLUME #######################
[module/volume]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =  muted
label-muted-foreground = #aaa
format-volume-padding = 0
format-muted-padding = 0

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 

################ PULSEAUDIO VOLUME ####################
[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false

interval = 5

format-volume = <ramp-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted = "婢"
format-volume-padding = 0
format-muted-padding = 0


ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳
ramp-headphones-0 = 

click-right = pavucontrol &

####################### UPDATES #######################
[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/updates.sh
interval = 600
format-prefix = " "
click-right = pamac-updater
click-left = pamac-updater
format-padding = 2


####################### WLAN #######################
[module/wlan]
type = internal/network

interface = wlp3s0
interval = 30

label-connected = " %essid%  " 
label-disconnected = " Not Connected  "
# click-right = networkmanager_dmenu &

####################### MUSIC #######################

[module/spotify]
type = custom/script
interval = 5
format-prefix = "  "
format = "<label>"
exec = $HOME/.config/polybar/scripts/spotify.py
format-foreground = ${colors.foreground}
# label =  %output:0:30:%
click-left = playerctl play-pause

[module/playpause]
type = custom/script
exec = $HOME/.config/polybar/scripts/spot.sh
format-padding = 1
interval = 2
format = <label>
click-left = playerctl play-pause
format-foreground = ${colors.foreground}

####################### SETTINGS #######################

[module/kdeconnect]
type = custom/script
exec = "~/.config/polybar/extensions/polybar-kdeconnect/polybar-kdeconnect.sh -d"
tail = true

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;format-margin = 0
